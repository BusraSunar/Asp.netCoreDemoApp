@model IEnumerable<DemoApp.Models.Art>

@{
    ViewData["Title"] = "Index";
}

<h1>Art Management System</h1>

<p>
    <input class="btn btn-primary" type="button" value="Create New" onclick="@("window.location.href='" + @Url.Action("Create", "Arts") + "'");" />
</p>

<div class="row mx-md-n5">

    @foreach (var item in Model)
    {
        <div class="col-sm-4">
            <div class="card-deck mt-4">
                <div class="card box-shadow" style="width: 18rem;" >
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title text-center"> @Html.DisplayFor(modelItem => item.ArtName)</h5>
                        <p class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </p>
                       
                    </div>
                </div>
            </div>
        </div>
        }

    </div>

